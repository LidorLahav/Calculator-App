<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textViewOp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:gravity="center"
            android:textSize="30sp"
            />
        <TextView
            android:id="@+id/textViewNumber"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:layout_margin="10dp"
            android:textSize="30sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="1"
            android:onClick="setNumber"/>
        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="2"
            android:onClick="setNumber"/>
        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="3"
            android:onClick="setNumber"/>
        <Button
            style="@style/opButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="+"
            android:onClick="setOp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="4"
            android:onClick="setNumber"/>
        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="5"
            android:onClick="setNumber"/>
        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="6"
            android:onClick="setNumber"/>
        <Button
            style="@style/opButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="-"
            android:onClick="setOp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="7"
            android:onClick="setNumber"/>
        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="8"
            android:onClick="setNumber"/>
        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="9"
            android:onClick="setNumber"/>
        <Button
            style="@style/opButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="*"
            android:onClick="setOp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="."
            android:onClick="setPoint"/>
        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="0"
            android:onClick="setNumber"/>
        <Button
            style="@style/numberButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="C"
            android:onClick="clear"/>
        <Button
            style="@style/opButtonStyle"
            android:backgroundTint="@color/gray"
            android:text="/"
            android:onClick="setOp"/>

    </LinearLayout>

    <Button
        style="@style/equalButtonStyle"
        android:backgroundTint="@color/gray"
        android:text="="
        android:onClick="setOp"/>


</LinearLayout>